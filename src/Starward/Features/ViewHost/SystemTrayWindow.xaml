<sf:WindowEx x:Class="Starward.Features.ViewHost.SystemTrayWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hn="using:H.NotifyIcon"
             xmlns:lang="using:Starward.Language"
             xmlns:local="using:Starward.Features.ViewHost"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sc="using:Starward.Controls"
             xmlns:sf="using:Starward.Frameworks"
             Title="StarwardTrayMenu"
             x:DefaultBindMode="OneWay"
             Closed="WindowEx_Closed"
             mc:Ignorable="d">

    <Grid Name="RootGrid">
        <hn:TaskbarIcon x:Name="trayIcon"
                        LeftClickCommand="{x:Bind ShowMainWindowCommand}"
                        NoLeftClickDelay="True"
                        RightClickCommand="{x:Bind ShowCommand}"
                        ToolTipText="Starward" />

        <StackPanel x:Name="MenuStackPanel" Padding="8">

            <Button Height="36"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Command="{x:Bind ShowMainWindowCommand}"
                    Style="{ThemeResource DateTimePickerFlyoutButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon HorizontalAlignment="Center"
                              FontSize="16"
                              Glyph="&#xE80F;" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind lang:Lang.MainPage_Launcer}" />
                </StackPanel>
            </Button>

            <!--Launch Game Items-->
            <ItemsControl ItemsSource="{x:Bind InstalledGames}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:GameLaunchItem">
                        <Button Width="48"
                                Height="48"
                                Padding="4"
                                Command="{x:Bind LaunchCommand}"
                                ToolTipService.ToolTip="{x:Bind DisplayName}"
                                Style="{ThemeResource DateTimePickerFlyoutButtonStyle}">
                            <Border CornerRadius="6">
                                <Image Source="{x:Bind GameIcon}" Stretch="UniformToFill" />
                            </Border>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Height="36"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Command="{x:Bind ExitCommand}"
                    Style="{ThemeResource DateTimePickerFlyoutButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon HorizontalAlignment="Center"
                              FontSize="16"
                              Glyph="&#xE7E8;" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind lang:Lang.Common_Exit}" />
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>

</sf:WindowEx>
